<% include partials/header.ejs %>
<div class="container">
      <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
       <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="PUT">
         <div class="form-group">
          <input class="form-control" type="text" name="name" value="<%= campground.name %>">
          </div>
          <div class="form-group">
            <img src="<%= campground.image %>" alt="<%= campground.name %> image">
            <input class="form-control" type="text" name="img" value="<%= campground.image %>">
          </div>
          <div class="form-group">
            <button class="btn btn-block btn-lg btn-primary">Submit!</button>
          </div>
          <a href="/campgrounds">Go Back</a> 
         </div>
        </form>
       </div>
      </div>
</div>
<% include partials/footer.ejs %>