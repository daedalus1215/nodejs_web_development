<% include partials/header.ejs %>
<div class="container">
  <div class="row">
  <div class="mini-container" style="text-align: center; margin: 0 auto;">
      <h1><%= theCamp.name %></h1>
      <p>
        <img src="<%= theCamp.image %>" alt="<%= theCamp.name %>">
      </p>
      <p class="camp-description">
        <%= theCamp.description %>
      </p>
      <form id="delete" action="/campgrounds/<%= theCamp.id %>/edit" />
        <button class="btn btn-warning">Edit</button>
      </form>
      <form  id="delete" action="/campgrounds/<%= theCamp.id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete</button>
      </form>
      <!-- Comments for this Campground -->
      <% theCamp.comments.forEach(function(comment) { %>
        <p>
          <strong><%= comment.author %></strong> - <%= comment.text %>
        </p>
      <% });%>
    </div>
  </div>
</div>
<% include partials/footer.ejs %>